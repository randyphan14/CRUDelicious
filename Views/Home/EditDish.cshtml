@using CRUDelicious.Models
@model Dish

<h1>Edit Dish!</h1>
<h3><a href="/">Home</a></h3>

    <form asp-action="editdish" asp-controller="Home" method="POST">
        
        <label asp-for="Chef">Chef's Name</label>
        <span asp-validation-for="Chef"></span>
        <input type="text" asp-for="Chef" value="@ViewBag.dishpage.Chef">

        <label asp-for="Tastiness">Tastiness</label>
        <span asp-validation-for="Tastiness"></span>
        <select asp-for="Tastiness" >
            <option value=1>1</option>
            <option value=2>2</option>
            <option value=3>3</option>
            <option value=4>4</option>
            <option value="5">5</option>
        </select>

        <label asp-for="Description">Description</label>
        <span asp-validation-for="Description"></span>
        <textarea asp-for="Description" value="@ViewBag.dishpage.Description"></textarea>
    
        <label asp-for="Name">Name of Dish</label>
        <span asp-validation-for="Name"></span>
        <input type="text" asp-for="Name" value="@ViewBag.dishpage.Name">

        <label asp-for="Calories"># of Calories</label>
        <span asp-validation-for="Calories"></span>
        <input type="text" asp-for="Calories" value="@ViewBag.dishpage.Calories">
        <button type="submit">Submit</button>
    </form>
