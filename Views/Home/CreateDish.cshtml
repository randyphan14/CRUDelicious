@* @using CRUDelicious.Models *@
@model Dish

<h1>Add a new Dish!</h1>
<a href="/">Home</a>
<form asp-action="create" asp-controller="Home" method="POST">

    <label for="Chef">Chef's Name</label>
    <span asp-validation-for="Chef"></span>
    <input type="text"asp-for="Chef">

    <label for="Tastiness">Tastiness</label>
    <span asp-validation-for="Tastiness"></span>
    <select asp-for="Tastiness">
        <option value=1>1</option>
        <option value=2>2</option>
        <option value=3>3</option>
        <option value=4>4</option>
        <option value=5>5</option>
    </select>
    <label for="Description">Description</label>
    <span asp-validation-for="Description"></span>
    <textarea asp-for="Description"></textarea>

    <label for="Name">Name of Dish</label>
    <span asp-validation-for="Name"></span>
    <input type="text"asp-for="Name">

    <label for="Calories"># of Calories</label>
    <span asp-validation-for="Calories"></span>
    <input type="text"asp-for="Calories">
<button type="submit">Submit</button>
</form>